{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "rmodeladf"
		},
		"databricks_properties_typeProperties_existingClusterId": {
			"type": "string"
		},
		"kcmunninadlsgen2mpa_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://databricks@kcmunninadlsgen2mpa.dfs.core.windows.net"
		},
		"kcmunninadlsgen2mpa_properties_typeProperties_tenant": {
			"type": "string",
			"defaultValue": "72f988bf-86f1-41af-91ab-2d7cd011db47"
		},
		"kcmunninadlsgen2mpa_properties_typeProperties_servicePrincipalId": {
			"type": "string",
			"defaultValue": "c74ca4a7-02f5-46ec-88c8-2136222c3d74"
		},
		"keyvault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kmdevopskv.vault.azure.net/"
		},
		"adlsgen2-trigger_properties_databricks-batch_parameters_source_folder": {
			"type": "string",
			"defaultValue": "@triggerBody().folderPath"
		},
		"adlsgen2-trigger_properties_databricks-batch_parameters_source_file": {
			"type": "string",
			"defaultValue": "@triggerBody().fileName"
		},
		"adlsgen2-trigger_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/bc54e366-6543-43f7-b404-cc14e4f525ab/resourceGroups/rg_persisteditems/providers/Microsoft.Storage/storageAccounts/kcmunninadlsgen2mpa"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/databricks-batch')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Execute Inference NB",
						"type": "DatabricksNotebook",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Shared/azure-rmodel-devops/r_score_batch_databricks",
							"baseParameters": {
								"inputdata_path": {
									"value": "/dbfs/mnt/adlsv2-@{pipeline().parameters.source_folder}/@{pipeline().parameters.source_file}",
									"type": "Expression"
								},
								"outputdata_path": {
									"value": "@concat('/dbfs/mnt/adlsv2-databricks/output_files/',replace(string(pipeline().parameters.source_file),'input','output'))",
									"type": "Expression"
								}
							}
						},
						"linkedServiceName": {
							"referenceName": "databricks",
							"type": "LinkedServiceReference"
						}
					}
				],
				"parameters": {
					"source_folder": {
						"type": "string"
					},
					"source_file": {
						"type": "string"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/databricks')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/databricks')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureDatabricks",
				"typeProperties": {
					"domain": "https://eastus2.azuredatabricks.net",
					"accessToken": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "keyvault",
							"type": "LinkedServiceReference"
						},
						"secretName": "databricks-token"
					},
					"existingClusterId": "[parameters('databricks_properties_typeProperties_existingClusterId')]"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/keyvault')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/kcmunninadlsgen2mpa')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('kcmunninadlsgen2mpa_properties_typeProperties_url')]",
					"tenant": "[parameters('kcmunninadlsgen2mpa_properties_typeProperties_tenant')]",
					"servicePrincipalId": "[parameters('kcmunninadlsgen2mpa_properties_typeProperties_servicePrincipalId')]",
					"servicePrincipalKey": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "keyvault",
							"type": "LinkedServiceReference"
						},
						"secretName": "sp-kcmunnin-adls-clientsecret-new"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/keyvault')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/keyvault')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "[parameters('keyvault_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/adlsgen2-trigger')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "databricks-batch",
							"type": "PipelineReference"
						},
						"parameters": {
							"source_folder": "[parameters('adlsgen2-trigger_properties_databricks-batch_parameters_source_folder')]",
							"source_file": "[parameters('adlsgen2-trigger_properties_databricks-batch_parameters_source_file')]"
						}
					}
				],
				"type": "BlobEventsTrigger",
				"typeProperties": {
					"blobPathBeginsWith": "/databricks/blobs/input_files/",
					"scope": "[parameters('adlsgen2-trigger_properties_typeProperties_scope')]",
					"events": [
						"Microsoft.Storage.BlobCreated"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/databricks-batch')]"
			]
		}
	]
}